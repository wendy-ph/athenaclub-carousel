<div class="container">

  <div class="card__slider" data-controller="slider">

    <div class="card__container" data-slider-target="container"
                                 data-action="click->slider#hideBtn"
                                 data-slider-refresh-btn-value="1000">
        <!-- bubble -->
        <div class="item-container card__row" data-slider-target="bubble">
          <div class="card border-0">
            <div class="bubble card-img-top">
              <a class="favorites-link" href="">
                <h2 class="title">Meet The Favorites</h2>
                <p class="link">SHOP ALL</p>
              </a>
            </div>
          </div>
        </div>

        <!-- products -->
        <% @products.each do |p| %>
          <a href="" id="<%= p.name.downcase.split(" ").join('-')  %>">
          <%=  %>
            <div class="item-container card__row" data-action="click->slider#hideBtn">
              <div class="card border-0">
                <%= image_tag p.imageUrl, class:"product-img d-block", alt:"#{p.name} product image", draggable:"false" %>
                  <div class="card-body">
                    <div class="name text-center"><%= "#{p.name.upcase} | $#{p.price}" %></div>
                    <div class="desc text-center"><%= p.description %></div>
                    <div class="star text-center" data-slider-target="rating">
                      <%= p.rating %>
                    </div>
                  </div>
            </div>
            </div>
          </a>
        <% end %>
    </div>

    <button class="arrow" data-slider-target="prevBtn" data-action="click->slider#prev click->slider#hideBtn">
      <span class="slider-btn"></span>
    </button>
    <button class="arrow" data-slider-target="nextBtn" data-action="click->slider#next click->slider#hideBtn">
      <span class="slider-btn"></span>
    </button>
  </div>

</div>
